# Example environment variables (do NOT commit real secrets)
# Copy this to `.env` and fill the values for local development

# MongoDB Atlas connection string (without credentials or use placeholders)
# Example: mongodb+srv://<USER>:<PASSWORD>@<CLUSTER>.mongodb.net/products_db?retryWrites=true&w=majority
MONGO_URI="mongodb+srv://<USER>:<PASSWORD>@<CLUSTER>.mongodb.net/products_db?retryWrites=true&w=majority&appName=tp-exam"

# Server port
PORT=4000

# Node environment
NODE_ENV=development

# Optional Cloudinary (if you use cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
